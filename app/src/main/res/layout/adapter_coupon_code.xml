<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp"
       android:layout_margin="@dimen/_10sdp"
        >
        <ProgressBar
            android:id="@+id/progressBar_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/color_green"
            android:indeterminateTintMode="src_atop"
            android:visibility="gone"
            />



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_7sdp"
        android:visibility="visible"
        >

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/discount"
            app:tint="@color/color_green" />

        <TextView
            android:id="@+id/tv_title_coupon_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flat Rs. 100 Off On Orders Above Rs. 400"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_decs_couponCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flat 40% Off on Your Orders"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:textColor="@color/black_lite"
            />
        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_cart_button_bg"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTint="@color/badgetextcolor"
                >
                <TextView
                    android:id="@+id/tv_couponCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FREE50"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/btn_tv_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:text="@string/apply"
                android:textColor="@color/color_green"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>
    </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>