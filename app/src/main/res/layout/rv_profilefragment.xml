<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>


    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rr_recycl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tv_cityMart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:text="CityMart"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/tv_Delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_27sdp"
            android:padding="@dimen/_5sdp"
            android:text="Pending"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />


        <ImageView
            android:id="@+id/checkbox_deliveryStatus_pending"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="25dp"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="1dp"
            android:src="@drawable/verified"
            app:tint="#e02012" />

        <ImageView
            android:id="@+id/checkbox_deliveryStatus_delivered"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="25dp"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="1dp"
            android:src="@drawable/verified"
            app:tint="@color/color_green"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/checkbox_deliveryStatus_placed"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="25dp"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="1dp"
            android:src="@drawable/verified"
            app:tint="#f5b642"
            android:visibility="gone"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_priceList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llout"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="Rs.307"
        android:textColor="@color/gray"
        android:textSize="@dimen/_10sdp"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/llout"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/tv_cityMart"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/doted"
        android:orientation="horizontal" />


    <TextView
        android:id="@+id/tv_order_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llout"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="Here is your order name and little discription"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_orderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/tv_order_name"
        android:layout_marginLeft="@dimen/_10sdp"

        android:text="March 21, 10:00 am"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@color/black" />


</LinearLayout>


</layout>